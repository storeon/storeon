{
  "name": "storeon",
  "version": "3.1.5",
  "description": "Tiny (180 bytes) event-based Redux-like state manager for React and Preact",
  "keywords": [
    "state",
    "immutable",
    "react",
    "preact",
    "hook"
  ],
  "scripts": {
    "clean": "rm -Rf coverage/ test/demo/.cache test/demo/dist",
    "test": "jest --coverage && eslint . && check-dts && rm -R coverage/ && size-limit",
    "start": "parcel serve --cache-dir test/demo/.cache -d test/demo/dist test/demo/index.html --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "storeon/storeon",
  "sideEffects": false,
  "types": "./index.d.ts",
  "peerDependencies": {
    "preact": ">=10.0.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.1.1",
    "@size-limit/dual-publish": "^7.0.8",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "check-dts": "^0.6.6",
    "dual-publish": "^3.0.1",
    "eslint": "^8.11.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^26.6.3",
    "nanodelay": "^1.0.7",
    "parcel-bundler": "^1.12.5",
    "preact": "^10.5.12",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "size-limit": "^7.0.8",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "size-limit": [
    {
      "name": "core",
      "import": {
        "index.js": "{ createStoreon }"
      },
      "limit": "217 B"
    },
    {
      "name": "core + react hook",
      "import": {
        "index.js": "{ createStoreon }",
        "react/index.js": "{ useStoreon }"
      },
      "limit": "392 B",
      "ignore": [
        "react"
      ]
    },
    {
      "name": "core + react decorator",
      "import": {
        "index.js": "{ createStoreon }",
        "react/index.js": "{ connectStoreon }"
      },
      "limit": "445 B",
      "ignore": [
        "react"
      ]
    },
    {
      "name": "devtools",
      "import": {
        "devtools/index.js": "{ storeonDevtools, storeonLogger }"
      },
      "limit": "595 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-unused-expressions": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "node/no-unpublished-require": "off",
      "import/export": "off",
      "no-redeclare": "off",
      "no-console": "off",
      "func-style": "off"
    },
    "globals": {
      "it": "readonly",
      "expect": "readonly",
      "jest": "readonly",
      "beforeEach": "readonly",
      "afterEach": "readonly"
    }
  },
  "eslintIgnore": [
    "test/demo/dist",
    "**/*.errors.ts",
    "**/errors.ts"
  ],
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
